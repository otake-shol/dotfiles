{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Bash(npm run *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(npx prettier *)",
      "Bash(npx eslint *)",
      "Bash(git *)",
      "Bash(make *)",
      "Bash(brew *)",
      "Bash(* | grep *)",
      "Bash(* | head *)",
      "Bash(* | tail *)",
      "Bash(* | wc *)",
      "Bash(* | sort *)",
      "Bash(* | uniq *)",
      "Bash(* | xargs *)",
      "Bash(* | while *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git reset --hard*)",
      "Bash(git checkout .)",
      "Bash(git clean *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          }
        ]
      }
    ]
  }
}
