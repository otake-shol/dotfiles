# ローカル設定（個人情報）を読み込み
[include]
	path = ~/.gitconfig.local

[core]
	autocrlf = input
	pager = delta
	excludesfile = ~/.gitignore_global
	fsmonitor = true
	untrackedCache = true
[feature]
	manyFiles = true
[commit]
	template = ~/dotfiles/stow/git/commit-template.txt
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[init]
	defaultBranch = main
	templatedir = ~/.git-templates/git-secrets
[secrets]
	providers = git secrets --aws-provider
	# AWS Access Key ID
	patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
	# AWS Secret Access Key
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	# AWS Account ID
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	# Slack Webhook URL
	patterns = https://hooks\\.slack\\.com/services/[A-Za-z0-9/]+
	# Generic API Key patterns
	patterns = (api[_-]?key|apikey|api_secret)\\s*[=:]\\s*['\"][A-Za-z0-9]{20,}['\"]
	# GitHub Personal Access Token
	patterns = ghp_[A-Za-z0-9]{36}
	# OpenAI API Key
	patterns = sk-[A-Za-z0-9]{48}
	# Anthropic API Key
	patterns = sk-ant-[A-Za-z0-9-]{95}
	# Example keys (allowed for documentation)
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
	allowed = ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
	allowed = sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
[http]
	postBuffer = 524288000
[alias]
	# ログ表示
	lg = log --oneline --graph --decorate --all
	ll = log --graph --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %C(green)%an%C(reset) %s%C(red)%d%C(reset)' --date=short
	last = log -1 --stat
	today = log --since=midnight --oneline
	week = log --since='1 week ago' --oneline
	l10 = log --oneline -10

	# ブランチ操作
	sw = switch
	swc = switch -c
	recent = branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)'
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"
	cleanup-merged = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -r git branch -d"
	prune-local = "!git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -d"

	# コミット操作
	undo = reset HEAD~1 --mixed
	amend = commit --amend --no-edit
	wip = "!git add -A && git commit -m 'WIP'"
	unwip = reset HEAD~1 --mixed
	fixup = commit --fixup

	# ステージング
	unstage = restore --staged
	discard = restore

	# 差分
	df = diff
	dfs = diff --staged
	dft = difftool
	changed = diff --name-only HEAD

	# ステータス
	st = status -sb

	# その他の便利エイリアス
	aliases = config --get-regexp alias
	contributors = shortlog --summary --numbered
	branches = branch -a --sort=-committerdate
	tags = tag -l --sort=-version:refname
	stashes = stash list
[log]
	date = short
	abbrevCommit = true
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = true
[credential]
	helper = osxkeychain
[fetch]
	prune = true
[rerere]
	enabled = true
[merge]
	conflictstyle = zdiff3
[diff]
	algorithm = histogram
	colorMoved = default
[rebase]
	autoStash = true
[gpg]
	# GPGプログラム設定（コミット署名用）
	# macOSの場合は gpg2 を使用することを推奨
	# program = gpg
[commit]
	# GPG署名を有効にする場合はコメントを外す
	# gpgsign = true
[tag]
	# タグにも署名する場合はコメントを外す
	# gpgSign = true
[color "decorate"]
	HEAD = bold cyan
	branch = bold green
	tag = bold yellow
