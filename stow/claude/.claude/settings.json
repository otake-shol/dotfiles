{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "defaultMode": "plan",
    "disableBypassPermissionsMode": "disable",
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Glob(*)",
      "Grep(*)",
      "Skill(*)",
      "Task(*)",
      "WebFetch(*)",
      "WebSearch(*)",
      "mcp__playwright__*",
      "mcp__context7__*",
      "mcp__serena__*",

      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(npx *)",
      "Bash(node *)",

      "Bash(git *)",

      "Bash(make *)",
      "Bash(brew *)",
      "Bash(gh *)",

      "Bash(ls *)",
      "Bash(ls)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *)",
      "Bash(touch *)",
      "Bash(ln *)",
      "Bash(chmod *)",

      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(diff *)",
      "Bash(which *)",
      "Bash(type *)",
      "Bash(command *)",
      "Bash(echo *)",
      "Bash(printf *)",
      "Bash(pwd)",
      "Bash(pwd *)",
      "Bash(date *)",
      "Bash(date)",
      "Bash(wc *)",
      "Bash(jq *)",
      "Bash(open *)",
      "Bash(tar *)",
      "Bash(unzip *)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)",
      "Bash(rm -rf *)",
      "Bash(rm -r *)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Bash(wget * | bash)",
      "Bash(sudo *)",

      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.kube/**)",
      "Read(~/.npmrc)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.zprofile)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git reset --hard*)",
      "Bash(git clean *)",
      "Bash(npm publish *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if this file write is safe. Verify: 1) No writes to system paths (/etc, /usr, /bin), 2) No credential/secret content being written, 3) No path traversal attempts. If unsafe, return {\"decision\": \"block\", \"reason\": \"explanation\"}. If safe, return {\"decision\": \"approve\"}."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before stopping, verify: 1) Were all requested changes made? 2) Are there any obvious errors in the changes? 3) Should tests be run? Return a brief summary of verification status."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Context is about to be compacted. Summarize the key decisions, progress, and any important context that should be preserved. Focus on: current task status, files modified, decisions made, and next steps."
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "superpowers@superpowers-marketplace": true
  },
  "language": "日本語",
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 90,
  "enableAllProjectMcpServers": false,
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowAllUnixSockets": true,
      "allowedDomains": [
        "github.com",
        "*.github.com",
        "*.githubusercontent.com",
        "registry.npmjs.org",
        "*.npmjs.org",
        "registry.yarnpkg.com",
        "*.anthropic.com",
        "*.claude.ai"
      ]
    }
  }
}
